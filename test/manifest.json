{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "wklin@cs.cornell.edu",
      "strict_min_version": "42.0"
    }
  },
  
  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["borderify.js"]
    }
  ]

}